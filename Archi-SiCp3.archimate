  <!-- ============= ADIÇÕES PARA ATENDER AOS CRITÉRIOS SOLICITADOS ============= -->

  <!-- 1. VISÃO DA ARQUITETURA (20%) - Complementos -->
  <folder name="Strategy" id="id-strategy-additions">
    <!-- Assessments (Novos) -->
    <element xsi:type="archimate:Assessment" id="id-assess1" name="Risco de segurança de dados">
      <property key="Impacto" value="Alto"/>
      <property key="Mitigação" value="Criptografia SSL/TLS e LGPD"/>
    </element>
    <element xsi:type="archimate:Assessment" id="id-assess2" name="Risco de baixa adoção">
      <property key="Impacto" value="Médio"/>
      <property key="Mitigação" value="Gamificação e treinamentos"/>
    </element>

    <!-- Restrições -->
    <element xsi:type="archimate:Constraint" id="id-constraint1" name="Conformidade com LGPD">
      <property key="Descrição" value="Proteção de dados pessoais"/>
    </element>
  </folder>

  <!-- 2. ARQUITETURA DE NEGÓCIO (20%) - Complementos -->
  <folder name="Business" id="id-business-additions">
    <!-- Detalhamento de processos -->
    <element xsi:type="archimate:BusinessProcess" id="id-process-detail1" name="Fluxo de Submissão de Ideias">
      <property key="Evento Disparador" value="Colaborador acessa plataforma via QR Code"/>
      <property key="Passos" value="1. Login → 2. Envio de ideia → 3. Confirmação"/>
      <property key="Local" value="Dispositivos móveis (celular)"/>
    </element>
    <element xsi:type="archimate:BusinessProcess" id="id-process-detail2" name="Fluxo de Aprovação de Projetos">
      <property key="Responsável" value="Comitê de Inovação"/>
      <property key="Evento Disparador" value="Notificação de nova ideia"/>
    </element>
  </folder>

  <!-- 3. ARQUITETURA DE SISTEMA (20%) - Adições -->
  <folder name="Application" id="id-application-additions">
    <!-- Componentes de Sistema -->
    <element xsi:type="archimate:ApplicationComponent" id="id-frontend" name="Frontend (Flutter)">
      <property key="Tecnologia" value="Flutter (Mobile/Web)"/>
      <property key="Função" value="Interface para colaboradores e executivos"/>
    </element>
    <element xsi:type="archimate:ApplicationComponent" id="id-backend" name="Backend (Java/Spring)">
      <property key="Função" value="Processar regras de negócio"/>
    </element>
    <element xsi:type="archimate:ApplicationInterface" id="id-api-rest" name="API REST">
      <property key="Protocolo" value="HTTP/JSON"/>
    </element>

    <!-- Microserviços -->
    <element xsi:type="archimate:ApplicationComponent" id="id-microservice1" name="API de Ideias">
      <property key="Responsabilidade" value="CRUD de ideias"/>
    </element>
    <element xsi:type="archimate:ApplicationComponent" id="id-microservice2" name="API de Gamificação">
      <property key="Responsabilidade" value="Pontuação e rankings"/>
    </element>

    <!-- Dados -->
    <element xsi:type="archimate:DataObject" id="id-db-ideias" name="Banco de Dados (PostgreSQL)">
      <property key="Schema" value="Tabelas: Ideias, Projetos, Usuários"/>
    </element>
  </folder>

  <!-- 4. ARQUITETURA DE TECNOLOGIA (20%) - Adições -->
  <folder name="Technology" id="id-technology-additions">
    <!-- Software -->
    <element xsi:type="archimate:TechnologyProduct" id="id-flutter" name="Flutter SDK">
      <property key="Versão" value="3.0+"/>
    </element>
    <element xsi:type="archimate:TechnologyProduct" id="id-postgresql" name="PostgreSQL">
      <property key="Versão" value="14"/>
    </element>

    <!-- Cloud -->
    <element xsi:type="archimate:TechnologyProduct" id="id-aws" name="Amazon Web Services">
      <property key="Serviços" value="EC2, RDS, S3"/>
    </element>

    <!-- Redes -->
    <element xsi:type="archimate:Network" id="id-vpc" name="VPC Eurofarma">
      <property key="Segurança" value="Subnets privadas/públicas"/>
    </element>
  </folder>

  <!-- 5. IMPLEMENTAÇÃO & MIGRAÇÃO (20%) - Adições -->
  <folder name="Implementation" id="id-implementation-additions">
    <!-- Roadmap -->
    <element xsi:type="archimate:WorkPackage" id="id-sprint1" name="Sprint 1: Módulo de Ideias">
      <property key="Prazo" value="Mês 1"/>
      <property key="Entregas" value="Frontend + API de Ideias"/>
    </element>
    <element xsi:type="archimate:WorkPackage" id="id-sprint2" name="Sprint 2: Gamificação">
      <property key="Prazo" value="Mês 2"/>
      <property key="Entregas" value="Sistema de pontos e rankings"/>
    </element>

    <!-- Protótipos -->
    <element xsi:type="archimate:Artifact" id="id-prototype1" name="Protótipo: Tela de Login via QR Code">
      <property key="Ferramenta" value="Figma"/>
      <property key="Link" value="https://figma.com/prototipo-inovaeuro"/>
    </element>
  </folder>

  <!-- ============= RELACIONAMENTOS ADICIONAIS ============= -->
  <folder name="Relations" id="id-relations-additions">
    <!-- Conexões entre novos elementos -->
    <element xsi:type="archimate:FlowRelationship" id="id-rel-new1" source="id-frontend" target="id-api-rest"/>
    <element xsi:type="archimate:FlowRelationship" id="id-rel-new2" source="id-api-rest" target="id-microservice1"/>
    <element xsi:type="archimate:AssignmentRelationship" id="id-rel-new3" source="id-aws" target="id-db-ideias"/>
  </folder>
</archimate:model>
